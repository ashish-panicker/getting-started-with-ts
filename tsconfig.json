{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"] // compile all .ts files in the src directory
}
